//Variáveis bola
let xBall = 300;
let yBall = 200;
let dBall = 20;
let rBall = dBall/2;

//Velocidade da bola
let Velx = 5;
let Vely = 5;

//Variáveis da Raquete
let xRaq = 5;
let yRaq = 150;
let wRaq = 10;
let hRaq = 90;



//Criar o background
function setup() {
  createCanvas(600, 400);
}
//Mostra o que foi criado nas funções
function draw() {
  background(0);
  showBall();
  moveBall();
  Colision();
  showRaq();
  moveRaq();
  colRaq();
  
}
//Desenha a bola no cenário
function showBall(){
  circle(xBall,yBall,dBall);
  }

//Movimenta a Bola
function moveBall(){
  xBall += Velx
  yBall += Vely
}

//Calcula a colisão da bola com as bordas
function Colision(){
  if (xBall + rBall > width ||
     xBall - rBall < 0){
    Velx *= -1;
  }
  
  if (yBall + rBall > height ||
     yBall - rBall <0){
    Vely *= -1;
  }
}

function showRaq(){
  rect(xRaq,yRaq,wRaq,hRaq)
  
}

//Movimenta a Raquete
function moveRaq(){
  if (keyIsDown(UP_ARROW)){
      yRaq -= 10;
      }
  
  if (keyIsDown(DOWN_ARROW)){
      yRaq += 10;
      }
}

//Colisão da Bola na Raquete
function colRaq(){
  if (xBall - rBall < xRaq + wRaq && yBall - rBall < yRaq + hRaq && yBall + rBall > yBall){
    Velx *= -1
  }
}
